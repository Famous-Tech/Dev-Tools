<Button>:
    background_color: 0.2, 0.6, 0.8, 1
    color: 1, 1, 1, 1
    font_name: 'Roboto'
    font_size: '16sp'
    size_hint: 0.2, 0.1
    border: 2, 2, 2, 2
    border_radius: 5
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.border_radius]
    canvas.after:
        Color:
            rgba: 1, 1, 1, 0.2
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, self.border_radius)
            width: 1
    on_press:
        self.background_color = 0.1, 0.5, 0.7, 1
    on_release:
        self.background_color = 0.2, 0.6, 0.8, 1

<Label>:
    font_name: 'Roboto'
    font_size: '20sp'
    color: 0.2, 0.2, 0.2, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput>:
    background_color: 1, 1, 1, 1
    foreground_color: 0.2, 0.2, 0.2, 1
    font_name: 'Roboto'
    font_size: '16sp'
    size_hint: 0.8, 0.1
    padding: 10
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.2, 0.2, 0.2, 0.2
        Line:
            rectangle: (self.x, self.y, self.width, self.height)
            width: 1

<Popup>:
    background: 'assets/images/background.jpg'
    separator_color: 0.2, 0.6, 0.8, 1
    title_color: 1, 1, 1, 1
    title_font: 'Roboto'
    title_size: '20sp'

<FileChooserIconView>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.8
        Rectangle:
            pos: self.pos
            size: self.size
    scroll_timeout: 200
    scroll_distance: 20

<TabbedPanel>:
    tab_width: 200
    tab_height: 50
    tab_pos: 'top_left'
    tab_bar_height: 50
    tab_bar_bgcolor: 0.2, 0.6, 0.8, 1
    tab_indicator_height: 5
    tab_indicator_color: 1, 1, 1, 1
    tab_text_color: 1, 1, 1, 1
    tab_font_size: '16sp'
    tab_font_name: 'Roboto'
    tab_label_mode: 'normal'
    tab_label_width: 200
    tab_label_height: 50
    tab_label_color: 1, 1, 1, 1
    tab_label_font_size: '16sp'
    tab_label_font_name: 'Roboto'
    tab_label_mode: 'normal'
